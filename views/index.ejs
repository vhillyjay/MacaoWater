<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %> 
<body>
    <%- include('./partials/nav.ejs') %> 

    <div class="blogs content">
        <h2>All Blogs</h2>

        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blogContent => { %>
                <h3><%= blogContent.title %></h3>
                <p><%= blogContent.snippet %></p>
                <small><%= blogContent.createdAt %></small>
            <% }) %>
        <% } else { %>
            <h3>No blogs for now</h3>
        <% } %> 

    </div>

    <%- include('./partials/footer.ejs') %>
</body>
</html>